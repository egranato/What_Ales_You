<!-- list of beers per brewery  -->
<div class="container">
  <div class="row">
    <a class="col l1 s2 beer" href="/users"><img src="../../../../../../../../img/bottle.png"/></a>
    <h4 class="feature col l11 s10 brews-near">{{breweryName}}</h4>
  </div>
<br>
<div class="intrinsic-container intrinsic-container-16x9">
  <iframe src="https://www.google.com/maps/embed/v1/place?key=AIzaSyCY8Xs7OGljGaFq2fGqjo-ygCC6euwArCk&q={{breweryNameSearch}}" allowfullscreen>
  </iframe>
</div>

{{../breweryId}}
<ul class="collapsible" data-collapsible="accordion">
  {{#each beer}}
  <li>
    <div class="collapsible-header">
      <div>{{this.name}}</div>

    </div>
    <div class="collapsible-body padding-all">
      <span>ABV: {{this.style.abvMax}}</span>
      <br>
      <br>
      <span>{{this.description}}</span>
      <br>
      <br>
      <form action="/brewery/{{this.id}}/{{../breweryId}}" method="POST">
      <span>Rating:</span>
      <input type="submit" name="rating" value="1" type="checkbox" id="test1">
      <input type="submit" name="rating" value="2" type="checkbox" id="test2">
      <input type="submit" name="rating" value="3" type="checkbox" id="test3">
      <input type="submit" name="rating" value="4" type="checkbox" id="test4">
      <input type="submit" name="rating" value="5" type="checkbox" id="test5">
      </form>
    </div>
  </li>
  {{/each}}
</ul>
